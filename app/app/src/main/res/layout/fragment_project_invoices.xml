<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.lennartklein.uurtjefactuurtje.ProjectInvoicesFragment"
    android:padding="@dimen/margin_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/heading_invoices"
            android:paddingBottom="@dimen/margin_medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/greyDark" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/work_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="12dp"
                android:text="01 jan" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/work_date"
                android:layout_toStartOf="@id/action_show_invoice"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/work_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    android:text="#20180001" />

                <TextView
                    android:id="@+id/work_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="â‚¬ 712,28" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/action_show_invoice"
                android:src="@drawable/ic_receipt_24dp"
                android:layout_width="@dimen/list_button"
                android:layout_height="@dimen/list_button"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_circle"
                android:clickable="false"/>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
