<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_medium"
    android:padding="@dimen/margin_medium"
    android:background="@drawable/card_round">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/project_name"
            android:text="@string/placeholder_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Wearable.Medium"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/project_company"
            android:text="@string/placeholder_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Wearable.Small"
            android:textColor="@color/primaryLight" />

    </LinearLayout>

</RelativeLayout>